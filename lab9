#include <iostream> 
using namespace std;
int main()
{
    setlocale(0, "");
    int a, b,c, n,k,x;
    cout << "Введите номер задания" << "\n";
    cin >> x;
    if (x == 1) {
        cout << "Введите число N секунд, прошедшее с начала суток прошло  :\n";
        cin >> n;
        cout << "Количество секунд, прошедших с начала последней минуты:\n";
        cout << n % 60 << "\n";
    }
    else if (x == 2) {
        cout << "Введите число K, лежащее в диапазоне 1–365:\n";
        cin >> a;
        if ((a > 0) and (a < 365)) {
            cout << "Номер дня недели для K-го дня года:";
            cout << a % 7 << "\n";
        }
        else {
            cout << "Ошибка";
        }
    }
    else if (x == 3) {
        cout << "Введите число K, лежащее в диапазоне 1–365:\n";
        cin >> k;
        cout << "Введите число N, лежащее в диапазоне 1–7:\n";
        cin >> n;
        if ((k > 0) and (k < 365) and (n > 0) and (n < 7)) {
            cout << "Номер дня недели для K-го дня года, если известно, что в этом году 1 января было днем недели с номером N:";
            if (((k + n - 1) % 7) == 0) {
                cout << 7 << "\n";
            }
            else {
                cout << (k + n - 1) % 7 << "\n";
            }
          }
        else {
            cout << "Ошибка";
        }
    }
    else if (x == 4) {
        cout << "Введите число A:\n";
        cin >> a;
        cout << "Введите число B:\n";
        cin >> b;
        cout << "Введите число C:\n";
        cin >> c;
        if (c > a and c > b) {
            cout << "Ни один квадрат не вместился";
        }
        else if (a == 0 or b == 0 or c == 0) {
            cout << "Ошибка\n";
        }
        else {
            n = a / c;
            k = b / c;
            cout << "Количество квадратов, размещенных на прямоугольнике:\n";
            cout << n * k << "\n";
            cout << "Площадь незанятой части прямоугольника:\n";
            cout << a * b - n * k * c * c << "\n";
        }
    }
    else if (x ==5) {
        cout << "Введите номер некоторого года :\n";
            cin >> a;
            if (a>0 and a < 101 ) {
                cout << "1 столетие";
            }
            else if (a % 100==0) {
                cout << a/100 << " столетие\n";
            }
            else {
                cout << a / 100 +1 << " столетие\n";
            }
    }
    else if (n > 5) {
        cout << "Такого задания нет \n";
    }     
  }

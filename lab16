#include <iostream> 
#include <cmath>
using namespace std;
int main()
{
	setlocale(0, "");
	int z, n,i, a,d,s,L,R;
	int m[100];
	cout << "Введите номер задания" << "\n";
	cin >> z;
	if (z == 1) {
		cout << "Введите целое число N:\n";
		cin >> n;
		m[0] = 1;
		for (i = 1; i < n; i++) {
			m[i] = m[i - 1] + 2;
		}
		cout << "Массив " << n << " первых положительных нечетных чисел: " << "\n";
		for (i = 0; i < n; i++) {
			cout << (m[i]) << " ";
		}
	}
	else if (z == 2) {
		cout << "Введите целое число N(>1)-количество элементов в массиве:\n";
		cin >> n;
		cout << "Введите первый член A геометрической прогрессии:\n";
		cin >> a;
		cout << "Введите знаменатель D геометрической прогрессии:\n";
		cin >> d;
		for (int i = 0; i <= n; i++)
		{
			m[i] = a * pow(d, i);
		}
		cout << "Массив " << n << " первых членов данной прогрессии: A, A·D, A·D^2 , A·D^3...: " << "\n";
		for (i = 0; i < n; i++) {
			cout << (m[i]) << " ";
		}
	}
	else if (z == 3) {
		cout << "Введите целое число N(>1)-количество элементов в массиве:\n";
		cin >> n;
		cout << "Введите первый элемент массива A:\n";
		cin >> m[0];
		cout << "Введите второй элемент массива B:\n";
		cin >> m[1];
		s = m[0] + m[1];
		for (int i = 2; i < n; ++i) {
			m[i] = s;
			s = m[i] + m[i - 1];
		}
		cout << "Массив размера " << n << ", первый элемент которого равен A, второй равен B, а каждый последующий элемент равен сумме всех предыдущих: " << "\n";
		for (i = 0; i < n; i++) {
			cout << (m[i]) << " ";
		}
	}
	else if (z == 4) {
		cout << "Введите целое число N-количество элементов в массиве:\n";
		cin >> n;
		cout << "Введите значения элементов массива:\n";
		for (i = 0; i < n; i++) {
			cin >> m[i];
		}
		cout << "Исходный массив:\n";
		for (i = 0; i < n; i++) {
			cout << (m[i]) << " ";
		}
		cout << "\n";
		cout << "Новый массив:\n";
		L = 0;
		R = n - 1;
		while (L <= R)
		{
			cout << m[L] << " ";
			if (L == R)
				break;
			cout << m[R] << " ";
			L++;
			R--;
		}
	}
	else if (z == 5) {
		cout << "Введите целое число N-количество элементов в массиве:\n";
		cin >> n;
		cout << "Введите значения элементов массива:\n";
		for (i = 0; i < n; i++) {
			cin >> m[i];
		}
		cout << "Исходный массив:\n";
		for (i = 0; i < n; i++) {
			cout << (m[i]) << " "; 
		}
		cout << "\n";
		cout << "Новый массив:\n";
		for (int i = 0; i < n; i += 2) cout << m[i] << " ";
		for (int i = (n % 2) ? n - 2 : n - 1; i >= 1; i -= 2) cout << m[i] << " ";
	}
	else if (z > 5) {
		cout << "Такого задания нет \n";
	}
}
